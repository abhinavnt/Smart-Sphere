    <!-- Top Bar with Search, Profile, and Logout Button -->
    <div class="top-bar">
        <input type="search" placeholder="Search for something...">
        <div class="profile-section">
            <span>Abhinav</span>
            <img class="profile-pic" src="https://images.vexels.com/media/users/3/145908/raw/52eabf633ca6414e60a7677b0b917d92-male-avatar-maker.jpg" alt="Profile Picture">
           <a href="/admin/logout"><button class="logout-btn">Logout</button></a> 

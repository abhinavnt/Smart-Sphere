    <style>
        body {
            background-color: #f8f9fa;
        }
        h1 {
            color: #28a745;
            text-align: center;
            margin-bottom: 30px;
        }
        .order-summary {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
        }
        .continue-shopping {
            text-align: center;
            margin-top: 20px;
        }
        button {
            background-color: #28a745;
            color: white;
        }
        .section-title {
            color: #6c757d;
            border-bottom: 2px solid #28a745;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body class="bg-light">

    <!-- Include Header -->
    <%- include('partials/_header') %>
<br>
<br>
    <div class="container my-5">

        <div class="row">
            <!-- Left Side - Customer Information and Delivery Address -->
            <div class="col-md-6">
                <div class="order-summary">
                    <h5 class="section-title">Customer Information</h5>
                    <p><strong>Name:</strong> <%= order.userId.name %></p>
                    <p><strong>Email:</strong> <%= order.userId.email %></p>
                    <h5 class="section-title">Delivery Address</h5>
                    <p><strong>Address:</strong> <%= order.shippingAddress.location %></p>
                    <p><strong>State:</strong> <%= order.shippingAddress.city %></p>
                    <p><strong>place:</strong> <%= order.shippingAddress.state %></p>
                    <p><strong>ZIP Code:</strong> <%= order.shippingAddress.pincode %></p>
                </div>
            </div>

            <!-- Right Side - Order Details and Product Information -->
            <div class="col-md-6">
                <div class="order-summary">
                    <h5 class="section-title">Order Details</h5>
                    <p><strong>Order ID:</strong> <%= order.orderId %></p>
                    <p><strong>Status:</strong> <%= order.status %></p>

                    <h5 class="section-title">Order Items</h5>
                    <div class="mb-3">
                        <strong>Product:</strong> <%= order.product %><br>
                        <strong>Quantity:</strong> <%= order.quantity %><br>
                        <strong>Total Price:</strong> â‚¹<%= order.totalPrice %>
                    </div>

                    <h5 class="section-title">Payment Method</h5>
                    <p><%= order.paymentMethod %></p>
                    <h5 class="section-title">Estimated Delivery</h5>
                    <p><%= order.estimatedDelivery %></p>
                </div>
            </div>
        </div>

        <div class="continue-shopping">
            <button class="btn btn-success btn-lg" onclick="window.location.href='/shop'">Continue Shopping</button>
        </div>
    </div>


    <!-- Include Footer -->
    <%- include('partials/_footer') %>




</body>

<!--===============================================================================================-->	
<script src="/vendor/jquery/jquery-3.2.1.min.js"></script>

 <script>
    document.addEventListener('DOMContentLoaded', () => {
    const userId = window.userId;  // Assuming you have userId stored in a global variable

    // Function to fetch cart items count
    async function fetchCartItemCount() {
        try {
            // Fetch the cart data from backend (API route to get user's cart)
            const response = await axios.get(`/cart/items-count/${userId}`);
            
            // Assuming the API returns the number of items in the cart
            const itemCount = response.data.itemCount || 0;

            // Update the cart icon with the number of items
            document.querySelector('.icon-header-noti').setAttribute('data-notify', itemCount);
        } catch (error) {
            console.error('Error fetching cart item count:', error);
        }
    }

    // Call the function to fetch and update cart count on page load
    fetchCartItemCount();
});

 </script>
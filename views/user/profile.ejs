                            email: 'email@example.com',
                            contact: '1234567890'
                        },
                        theme: {
                            color: '#F37254'
                        }
                    };

                    const rzp1 = new Razorpay(options);

                    // Handle Razorpay payment failed event
                    rzp1.on('payment.failed', function (response) {
